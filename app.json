{
  "name": "mozgbrasil/magento-heroku",
  "description": "Magento App",
  "keywords": [
    "magento",
    "heroku",
    "mozg"
  ],
  "website": "http://mozg.com.br/",
  "repository": "https://github.com/mozgbrasil/magento-heroku",
  "logo": "http://mozg.com.br/assets/images/logos/Red_star.svg",
  "success_url": "/",
  "scripts": {
    "postdeploy": "echo 'eu em app.json 1'; bash bootstrap.sh;"
  },
  "env": {
    "SECRET_TOKEN": {
      "description": "A secret key for verifying the integrity of signed cookies.",
      "generator": "secret"
    }
  },
  "image": "heroku/php",
  "addons": [
    "cleardb",
    "semaphore",
    "codeship",
    "jawsdb:leopard",
    "sendgrid",
    "heroku-postgresql"
  ],
  "environments": {
    "test": {
      "scripts": {
        "test": "echo 'eu em app.json 2';"
      }
    }
  }
}