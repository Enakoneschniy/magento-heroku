{
  "name": "mozgbrasil/magento-heroku",
  "description": "Magento App",
  "keywords": [
    "app.json",
    "magento",
    "heroku",
    "mozg"
  ],
  "website": "http://mozg.com.br/",
  "repository": "https://github.com/mozgbrasil/magento-heroku",
  "logo": "http://mozg.com.br/assets/images/logos/Red_star.svg",
  "success_url": "/",
  "scripts": {
    "postdeploy": "echo 'eu em app.json 1' ; bash bootstrap.sh >> return.txt | curl --request POST https://fleep.io/hook/OLuIRi0JRt2yv5OQisX6tg --data @return.txt --verbose ;"
  },
  "env": {
    "SECRET_TOKEN": {
      "description": "A secret key for verifying the integrity of signed cookies.",
      "generator": "secret"
    }
  },
  "image": "heroku/php",
  "addons": [
    "cleardb",
    "semaphore",
    "codeship",
    "jawsdb:leopard",
    "sendgrid",
    "heroku-postgresql"
  ],
  "buildpacks": [
    {
      "url": "heroku/php"
    },
    {
      "url": "https://github.com/stomita/heroku-buildpack-phantomjs"
    },
    {
      "url": "https://github.com/gaumire/heroku-buildpack-mysql"
    }
  ],
  "environments": {
    "test": {
      "scripts": {
        "test": "echo 'eu em app.json 2';"
      }
    }
  }
}