{
  "name": "mozgbrasil/magento-heroku",
  "description": "Magento App",
  "keywords": [
    "app.json",
    "magento",
    "heroku",
    "mozg"
  ],
  "website": "http://mozg.com.br/",
  "repository": "https://github.com/mozgbrasil/magento-heroku",
  "logo": "http://mozg.com.br/assets/images/logos/Red_star.svg",
  "success_url": "/",
  "scripts": {
    "postdeploy": "echo 'Yo_postdeploy' ; bootstrap.sh",
    "pr-predestroy": "echo 'Yo_predestroy' ; teardown.sh ; "
  },
  "env": {
    "SECRET_TOKEN": {
      "description": "A secret key for verifying the integrity of signed cookies.",
      "generator": "secret"
    },
    "HEROKU_APP_NAME": {
      "required": false
    },
    "HEROKU_PARENT_APP_NAME": {
      "required": false
    }
  },
  "image": "heroku/php",
  "addons": [
    "jawsdb:leopard",
    "cleardb",
    "heroku-postgresql",
    "semaphore",
    "codeship",
    "sendgrid"

  ],
  "buildpacks": [
    {
      "url": "https://github.com/gaumire/heroku-buildpack-mysql"
    }
  ],
  "environments": {
    "test": {
      "scripts": {
        "test": "echo 'Yo_environments';"
      }
    }
  }
}